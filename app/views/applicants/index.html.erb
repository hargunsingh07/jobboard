<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="text-center mb-4">All Applicants</h1>
      <% @applicants.each do |applicant| %>
        <div class="card mb-3">
          <div class="card-body">
            <h2 class="card-title"><%= link_to applicant.name, applicant %></h2>
            <p class="card-text"><%= applicant.email %></p>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
